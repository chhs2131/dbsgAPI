<mapper namespace="com.dbsgapi.dbsgapi.member.mapper.MemberMapper">

    <select id="selectFavorites" resultType="com.dbsgapi.dbsgapi.member.dto.MemberFavoriteDto">
        SELECT favorite_index,
               user_no,
               kind,
               kind_no,
               DATE_FORMAT(regist_date, '%Y-%m-%d %T') regist_date
        FROM members_favorite
        ORDER BY favorite_index DESC
        LIMIT 100;
    </select>

    <select id="selectFavorite" parameterType="com.dbsgapi.dbsgapi.member.dto.MemberFavoriteDto" resultType="com.dbsgapi.dbsgapi.member.dto.MemberFavoriteDto">
        SELECT favorite_index,
               user_no,
               kind,
               kind_no,
               DATE_FORMAT(regist_date, '%Y-%m-%d %T') regist_date
        FROM 	members_favorite
        WHERE 	kind = #{kind} and kind_no = #{kindNo}
    </select>

    <insert id="insertFavorite" parameterType="com.dbsgapi.dbsgapi.member.dto.MemberFavoriteDto"
            useGeneratedKeys="true" keyColumn="favorite_index" keyProperty="favoriteIndex" >
        INSERT INTO members_favorite
            (
            user_no, kind, kind_no, regist_date
            )
        VALUES (
                #{userNo},
                #{kind},
                #{kindNo},
                NOW()
               )
    </insert>

    <select id="selectFavorite" parameterType="Long">
        DELETE FROM members_favorite
        WHERE 	favorite_index = #{favoriteIndex}
    </select>

</mapper>
